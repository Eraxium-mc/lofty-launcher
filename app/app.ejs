<html lang="en" xmlns="http://www.w3.org/1999/xhtml">

<head>
    <meta charset="utf-8" http-equiv="Content-Security-Policy"
        content="script-src 'self' 'sha256-In6B8teKZQll5heMl9bS7CESTbGvuAt3VVV86BUQBDk='" />
    <title>
        <%= lang('app.title') %>
    </title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Sora:wght@100..800&display=swap" rel="stylesheet">
    <script src="./assets/js/scripts/uicore.js"></script>
    <script src="./assets/js/scripts/uibinder.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="./assets/css/launcher2.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body {
            font-family: "Sora", serif;
            font-optical-sizing: auto;
            /*background: url('assets/images/backgrounds/<%=bkid%>.jpg') no-repeat center center fixed;*/
        }

        #main {
            display: none;
            height: calc(100% - 22px);
            width: 100%;
            position: absolute;
            z-index: 10;
        }



        .launch-progress {
            width: 100%;
            height: 2rem;
            background-color: #4a5568;
            /* Tailwind CSS bg-gray-700 */
            border-radius: 0.25rem;
            /* Tailwind CSS rounded */
            transition: width 0.5s ease-in-out;
            position: relative;
            z-index: 1;
        }

        .launch-progress::-webkit-progress-bar {
            background-color: #4a5568;
            /* Tailwind CSS bg-gray-700 */
            border-radius: 0.25rem;
            /* Tailwind CSS rounded */
        }

        .launch-progress::-webkit-progress-value {
            background-color: #3182ce;
            /* Tailwind CSS bg-blue-600 */
            border-radius: 0.25rem;
            /* Tailwind CSS rounded */
            transition: width 0.5s ease-in-out;
        }

        .launch-progress::-moz-progress-bar {
            background-color: #3182ce;
            /* Tailwind CSS bg-blue-600 */
            border-radius: 0.25rem;
            /* Tailwind CSS rounded */
            transition: width 0.5s ease-in-out;
        }

        .progress-text {
            position: absolute;
            top: 45%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 2;
            color: white;
        }

        /* Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 12px;
        }

        ::-webkit-scrollbar-track {
            background: #2d3748;
            /* Tailwind CSS bg-gray-800 */
            border-radius: 6px;
        }

        ::-webkit-scrollbar-thumb {
            background: #4a5568;
            /* Tailwind CSS bg-gray-700 */
            border-radius: 6px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: #718096;
            /* Tailwind CSS bg-gray-600 */
        }

        ::-webkit-scrollbar-thumb:active {
            background: #a0aec0;
            /* Tailwind CSS bg-gray-500 */
        }
    </style>
</head>

<body class="dark bg-gray-900" bkid="<%=bkid%>">
    <%- include('frame') %>
    <div id="main">
        <%- include('welcome') %>
        <%- include('login') %>
        <%- include('waiting') %>
        <%- include('loginOptions') %>
        <%- include('settings') %>
        <%- include('landing') %>
    </div>
    <%- include('overlay') %>
    <div id="loadingContainer" style="padding-top: 25vh;" class="flex items-center justify-center">
        <div id="loadingContent" class="text-center">
            <div id="loadSpinnerContainer" class="relative">
                <img id="loadCenterImage" src="assets/images/LoadingSeal.png" class="w-64 h-64 mx-auto">
            </div>
        </div>
    </div>
</body>

</html>